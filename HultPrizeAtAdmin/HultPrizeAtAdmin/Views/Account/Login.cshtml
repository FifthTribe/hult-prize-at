@{
  Layout = null;
}


@Html.Partial("~/Views/Shared/_Header.cshtml")

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="form">
                <h3>Login</h3>
                @{
                  if (!string.IsNullOrEmpty(ViewBag.LoginMessage))
                  {
                    <div class="alert alert-warning">
                        <strong title="@ViewBag.LoginDetails">Sorry!</strong> @ViewBag.LoginMessage
                    </div>
                  }
                }
                <form method="post" action="/account/loginprocess">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" placeholder="Username" class="form-control input-sm bounceIn animation-delay2" data-validate="{required: true, messages:{required:'Please enter field username'}}" name="username" id="username">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" placeholder="Password" class="form-control input-sm bounceIn animation-delay4" data-validate="{required: true, messages:{required:'Please enter field password'}}" name="password" id="password">
                    </div>

                    <div class="seperator"></div>
                    <div class="form-group">
                        <p class="text-center"><a href="/account/forgotpassword">Forgot your password?</a></p>
                        <p class="text-center"><input type="submit" class="btn btn-hult btn-sm bounceIn animation-delay5" value="Enter" /></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@Html.Partial("~/Views/Shared/_Footer.cshtml")